<head>
  <link rel="stylesheet" type="text/css" href="/pages.css">
</head>
<div class="card">
  <div class="card-header">
    <h2><%= @rest.name %></h2>
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-3">
      <p><h3><%=  @rest.short_description %></h3></p>
      <footer class="blockquote-footer"><h4><%=  @rest.full_description %></h4></footer>
      <footer class="blockquote-footer"><h4><%=  @rest.address %></h4></footer>
      <footer class="blockquote-footer"><h4>Average mark ---- <%= @average_mark.round(1) %></h4></footer>
    </blockquote>
  </div>
</div>

<link rel="stylesheet" href="http://bootstraptema.ru/plugins/2015/bootstrap3/bootstrap.min.css" />
<link rel="stylesheet" href="http://bootstraptema.ru/plugins/font-awesome/4-4-0/font-awesome.min.css" />
<style>

</style>

<% Comment.all.where(place_id: session[:rest_id]).each do |comment| %>
  <div class=" abcd card mt-5 ml-5" style="box-sizing: border-box">
    <div class="card-body">
      <h5 class="card-title"> <%= User.find_by(id: comment.user_id).name %> </h5>
      <p class="card-text"> <%= comment.text%>. Grade - <%= comment.grade%> </p>
      <p class="card-text">  </p>
    </div>
  </div>
<% end %>

<form  method="post" action="/rate">
<section class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="panel">
        <div class="panel-body">
          <p><input type="number" name="rate" value="1" min="1" max="5" step="0.5"></p>
          <textarea class="form-control" rows="2" placeholder="Add your comment" name = "text"></textarea>
          <div class="mar-top clearfix">
            <button class="btn btn-sm btn-primary pull-right" type="submit" > Add </button>
          </div>
        </div>
      </div>
    </div>

  </div><!-- /.row -->
</section><!-- /.container -->
</form>
