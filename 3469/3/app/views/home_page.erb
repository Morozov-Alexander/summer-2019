<head>
  <link rel="stylesheet" type="text/css" href="/pages.css">
</head>
<form class="form-signin" method="get" action="/about_us">
<div class="row marketing" class = "carousel">
  <% @restaurants.each do |restaurant| %>
    <div class="card mt-5 ml-5" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title"> <%= restaurant.name %> </h5>
        <p class="card-text"> <%= restaurant.short_description %> </p>
        <a href="/<%= restaurant.name %>" class="btn btn-secondary">About us</a>
      </div>
    </div>
  <% end %>
</div>
</form>